            </intent-filter>
        </activity>
        
        <activity
            android:name="com.nigwa.marny.MainActivity"
            android:label="@string/app_name" >
        </activity>
        
        <activity
            android:name="com.nigwa.marny.HomeActivity"
            android:label="@string/app_name" >
        </activity>
        
        <activity
            android:name="com.nigwa.marny.MonsterActivity"
            android:label="@string/app_name"
            android:noHistory="true" >
        </activity>
        
        <activity
            android:name="com.nigwa.marny.RestRoomActivity"
            android:label="@string/app_name"
            android:noHistory="true" >
        </activity>
        
        <activity
            android:name="com.nigwa.marny.ShopRoomActivity"
            android:label="@string/app_name"
            android:noHistory="true" >
        </activity>
        
        <activity
            android:name="com.nigwa.marny.GoldRoomActivity"
            android:label="@string/app_name"
            android:noHistory="true" >
        </activity>
        <activity
            android:name="com.nigwa.marny.ShopWeaponActivity"
            android:label="@string/app_name"
            android:noHistory="true" >
        </activity>
    </application>

</manifest>
